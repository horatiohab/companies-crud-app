@model IEnumerable<CompaniesApp.Models.Company>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-secondary text-light" asp-action="Edit"><i class="bi bi-plus-square"></i> &nbsp; Add Company </a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Website)</th>
                <th>@Html.DisplayNameFor(model => model.Logo)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CompanyId">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                
                <td style="text-align:center">
                    @if (item.Logo != null)
                    {
                        <image src="@Html.DisplayFor(modelItem => item.Logo)" style="width:100px"></image>
                    }
                </td>

                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.CompanyId" class="btn btn-success text-light" style="cursor:pointer">
                        <i class="bi bi-pencil-square">&nbsp; Edit</i>
                    </a>
                    <a class="btn btn-danger text-light" style="cursor:pointer" onclick="deleteEntry('/Company/Delete/@item.CompanyId')">
                        <i class="bi bi-x-circle">&nbsp; Delete</i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script src="~/js/company.js"></script>
}