@model CompaniesApp.Data.CompanyViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Company Details";
}


<div class="row p-3 border">

    <div class="col-12 border-bottom">
        <h2 class="text-primary">@title</h2>
    </div>
    <input type="hidden" asp-for="Company.CompanyId" />
    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Company.Name)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Company.Name)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Company.Email)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Company.Email)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Company.Website)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Company.Website)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Company.Logo)
            </div>
            <div class="col-8">
                <image src="@Html.DisplayFor(model => model.Company.Logo)"></image>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col">
                        <a asp-action="Edit" asp-route-id="@Model.Company.CompanyId" class="btn btn-primary form-control">Edit</a>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<div class="row p-3 border">

    <div class="col-12 border-bottom">
        <h2 class="text-primary">@Html.DisplayFor(model => model.Company.Name) Employees</h2>
    </div>
    <div class="form-group row">
        @*        <div class="col-4">
            @Html.DisplayNameFor(model => model.Company.Employees)
        </div>*@

        @if (Model.Company.Employees != null)
        {
            @foreach (Employee item in Model.Company.Employees)
            {
                <div class="col-8">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </div>
                <div class="col-8">
                    @Html.DisplayFor(modelItem => item.LastName)
                </div>
            }
        }
    </div>
</div>


@section Scripts{ 
<partial name="_ValidationScriptsPartial" />
}